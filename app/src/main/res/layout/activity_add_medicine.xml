<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="Smart Dosage"
            app:subtitle="Never miss a dose again"
            
            android:titleTextColor="@color/white"
            android:subtitleTextColor="@color/white"
            android:background="@color/accent_green"
            android:padding="12dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Top card: medicine basics -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFFFF"
                app:strokeColor="#0EA47A"
                app:strokeWidth="2dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#222222"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_edit"
                        app:startIconTint="#0EA47A"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Medicine name"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                        app:startIconTint="#0EA47A"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_strength"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Strength"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_info_details"
                        app:startIconTint="#0EA47A"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_dose_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dosage amount"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Schedule header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#6B6B6B"
                android:paddingTop="6dp"
                android:paddingBottom="8dp" />

            <!-- Schedule card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFFFF"
                app:strokeColor="#0EA47A"
                app:strokeWidth="2dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TIMES"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#222222"
                        android:paddingBottom="10dp" />

                    <Spinner
                        android:id="@+id/sp_schedule_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E8F6F1"
                        android:popupBackground="#FFFFFF" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_recent_history"
                        app:startIconTint="#0EA47A"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_interval_hours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Every X hours (for interval)"
                            android:inputType="number"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_week"
                        app:startIconTint="#0EA47A"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_weekdays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Weekdays (e.g. MON,WED,FRI)"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingTop="10dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â° Add Time"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        app:chipBackgroundColor="#F7F9FA"
                        app:chipStrokeColor="#E6E6E6"
                        app:chipStrokeWidth="1dp"
                        android:textColor="#222222"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dates header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dates"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#6B6B6B"
                android:paddingTop="18dp"
                android:paddingBottom="8dp" />

            <!-- Dates card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFFFF"
                app:strokeColor="#0EA47A"
                app:strokeWidth="2dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_month"
                        app:startIconTint="#0EA47A"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Start date"
                            android:inputType="none"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_month"
                        app:startIconTint="#0EA47A"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="End date"
                            android:inputType="none"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- extra fields card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFFFF"
                app:strokeColor="#0EA47A"
                app:strokeWidth="2dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_info_details"
                        app:startIconTint="@color/accent_green"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_instructions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Special instructions"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_rotate"
                        app:startIconTint="@color/accent_green"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_refills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Number of refills"
                            android:inputType="number"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_add"
                        app:startIconTint="@color/accent_green"
                        app:boxBackgroundColor="@color/card_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_initial_supply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Initial supply count"
                            android:inputType="number"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- photo chooser -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#F7F9FA"
                app:strokeColor="#E6E6E6"
                app:strokeWidth="1dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ–¼ï¸"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Photo"
                        android:paddingStart="8dp"
                        android:textColor="#222222" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- spacer to allow for FAB -->
            <View
                android:layout_width="match_parent"
                android:layout_height="90dp" />

        </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_save"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_menu_save"
        app:tint="#FFFFFF"
        app:backgroundTint="#0EA47A"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp" />

</FrameLayout>
