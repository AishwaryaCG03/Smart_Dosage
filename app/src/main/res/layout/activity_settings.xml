<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:title="Smart Dosage"
        app:subtitle="Never miss a dose again"
        
        android:titleTextColor="@color/white"
        android:subtitleTextColor="@color/white"
        android:background="@color/accent_green"
        android:padding="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/desc_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="ðŸ”” Enable Notifications"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/desc_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Allow Location"
            android:textColor="#000000"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/desc_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ–¼ï¸ Allow Photos"
            android:textColor="#000000"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/desc_caretaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_escalate_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow caretaker call escalation" />
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_escalate_sos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow SOS escalation" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_sos_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SOS number (default 112)"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHint="#000000" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_escalation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Escalation Settings"
                android:textColor="#000000"
                app:cornerRadius="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Settings"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="16dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ai_base_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Base URL (e.g. https://api-inference.huggingface.co/models/...)"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ai_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API Key"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:inputType="textPassword" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_ai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Save AI Settings"
            android:textColor="#000000"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_doctor_pack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“„ Generate Doctor Pack"
            android:textColor="#000000"
            app:cornerRadius="20dp"
            android:layout_marginTop="12dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_budget_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Budget View"
            android:textColor="#000000"
            app:cornerRadius="20dp"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
